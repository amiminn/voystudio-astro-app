---
import '../styles/global.css';
import '@fontsource/geist-sans';
import Themes from 'astro-themes';
import Seo from '../components/Seo.astro';
import FaviconMetaData from '../components/FaviconMetaData.astro';
import { ViewTransitions } from 'astro:transitions';
import ThemeSwitcher from '@/components/ThemeSwitcher';

interface Props {
    title?: string;
    description?: string;
    ogImage?: string;
}
const { title, description, ogImage } = Astro.props as Props;
---

<html lang='en'>
    <head>
        <meta charset='utf-8' />
        <meta name='viewport' content='width=device-width' />
        <Seo title={title} description={description} ogImage={ogImage} />
        <FaviconMetaData />
        <link
            rel='alternate'
            type='application/rss+xml'
            title='0xDedinfosec Blogs'
            href={`${Astro.site}rss.xml`}
        />
        <ViewTransitions />
        <Themes defaultTheme='dark' />
    </head>
    <body class='bg-gray-50 dark:bg-gray-900 text-black dark:text-white'>
        <div class='flex flex-col justify-center px-8'>
            <nav class='flex items-center justify-end w-full relative max-w-2xl border-gray-200 dark:border-gray-700 mx-auto pt-8 pb-8 sm:pb-16 text-gray-900 bg-gray-50 dark:bg-gray-900 bg-opacity-60 dark:text-gray-100'>
                <ThemeSwitcher client:only='react' />
            </nav>
        </div>
        <main
            id='skip'
            class='flex flex-col justify-center px-8 bg-gray-50 dark:bg-gray-900'
        >
            <slot />
        </main>
    </body>
</html>
